<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- putramusik.produk tree view -->
    <record id="putramusik_produk_view_tree" model="ir.ui.view">
        <field name="name">Daftar Produk</field>
        <field name="model">putramusik.produk</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" />
                <field name="harga_beli" />
                <field name="harga_jual" />
                <field name="stok" />
                <field name="kelompokproduk_id" />
                <field name="supplier_id" />
            </tree>
        </field>
    </record>

    <!-- putramusik.produk form view -->
    <record id="putramusik_produk_view_form" model="ir.ui.view">
        <field name="name">Form Produk</field>
        <field name="model">putramusik.produk</field>
        <field name="arch" type="xml">
            <form string="Produk">
              <header>
                <button string="Input Produk" name="%(putramusik.penjualanreport_wizzard_action)d" type="action" class="btn btn-primary my-3"/>
               </header>
                <sheet>
                    <group name="Produk" string="Produk">
                        <!-- Add your fields here -->
                        <field name="name" />
                        <field name="harga_beli" />
                        <field name="harga_jual" />
                        <field name="stok" />
                    </group>
                    
                    <group name="Kelompok Produk" string="Kelompok Produk">
                        <field name="kelompokproduk_id" />
                    </group>

                    <group name="supplier" string="Supplier">
                        <field name="supplier_id" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- putramusik.produk action window -->
    <record id="putramusik_produk_action" model="ir.actions.act_window">
        <field name="name">Daftar Produk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">putramusik.produk</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem
        id="putramusik_produk_menu_act"
        name="Daftar Produk"
        parent="putramusik_produk_menu_categ"
        action="putramusik_produk_action"
        sequence="20"/>

</odoo>